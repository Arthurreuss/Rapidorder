<%#= so file loads %>
<%= render "shared/navbar" %>
<div class="d-flex justify-content-between header-container">
  <h1><%#= @restaurant.name %>Mediterano</h1>
</div>
<div class="outer-container d-flex">
  <div class="meals-container">
    <div class="pt-2 pb-2 text-center border">
      <h2>Meals</h2>
    </div>
    <div class="width-100 rows-container col">
      <% @tables.each do |table| %>
        <div class="border order-column w-75 m-1" style="align-self: center">
          <button class="project-red" data-bs-toggle="collapse" data-bs-target="#collapseExample" aria-expanded="true" aria-controls="collapseExample">
            <h3>Table: <%= table.name %></h3>
          </button>
          <% orders = table.orders %>
          <% orders = orders.select { |order| order.product.product_type == "Meal"} %>
          <% orders = orders.select { |order| order.status == false } %>
          <% orders.each do |order| %>
            <%#= link_to restaurant_update_status_path(:order_id => order.id), style: "text-decoration: none; color: black;" do %>
              <div data-controller="order" data-order-orderid-value='<%= order.id %>' data-order-restaurantid-value='<%= @restaurant.id %>' class="collapse show" id="collapseExample">
                <button class="order-card p-2 m-2 border border-1 btn btn-danger btn-large" data-action="click->order#change" data-order-target="output" >
                  <p style="margin-bottom: 0 !Important;"><%= order.amount %> x <%= order.product.name %> <%= distance_of_time_in_words(Time.current, order.created_at) %> ago</p>
                </button>
              </div>
              <%# end %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="drinks-container">
      <div class="pt-2 pb-2 text-center border">
        <h2>Drinks</h2>
      </div>
      <div class="width-100 rows-container col">
        <% @tables.each do |table| %>
          <div class="order-column border w-75 m-1" style="align-self: center">
            <button class="project-red" data-bs-toggle="collapse" data-bs-target="#collapseExample2" aria-expanded="true" aria-controls="collapseExample2">
              <h3>Table: <%= table.name %></h3>
            </button>
            <% orders = table.orders %>
            <% orders = orders.select { |order| order.product.product_type == "Drink"} %>
            <% orders = orders.select { |order| order.status == false } %>
            <% orders.each do |order| %>
              <%#= link_to restaurant_update_status_path(:order_id => order.id), style: "text-decoration: none; color: black;" do %>
                <div data-controller="order" data-order-orderid-value='<%= order.id %>' data-order-restaurantid-value='<%= @restaurant.id %>' class="collapse show" id="collapseExample2">
                  <button class="order-card p-2 m-2 border border-1 btn btn-danger btn-large" data-action="click->order#change" data-order-target="output" >
                    <p style="margin-bottom: 0 !Important;"><%= order.amount %> x <%= order.product.name %> <%= distance_of_time_in_words(Time.current, order.created_at) %> ago</p>
                  </button>
                </div>
                <%# end %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
